<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_prev"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/baseline_keyboard_arrow_left_24"
        app:backgroundTint="@android:color/black"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_next"
        android:layout_alignParentEnd="true"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/baseline_keyboard_arrow_right_24"
        app:backgroundTint="@android:color/black"/>

    <LinearLayout
        android:id="@+id/number_layout"
        android:layout_toStartOf="@id/btn_next"
        android:layout_toEndOf="@id/btn_prev"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_page_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:background="?attr/selectableItemBackground"
            android:textColor="@drawable/paging_text_color"
            app:backgroundTint="@android:color/white"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_page_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@drawable/paging_text_color"
            app:backgroundTint="@android:color/white"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_page_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@drawable/paging_text_color"
            app:backgroundTint="@android:color/white"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_page_4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@drawable/paging_text_color"
            app:backgroundTint="@android:color/white"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_page_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@drawable/paging_text_color"
            app:backgroundTint="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>